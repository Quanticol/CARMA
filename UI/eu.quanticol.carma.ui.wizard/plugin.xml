<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="carmaBuilder"
         name="CARMA Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="eu.quanticol.carma.ui.wizard.builder.CARMABuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="carmaBuilder"
         name="CARMA"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="eu.quanticol.carma.ui.wizard.builder.CARMABuilder">
         </run>
      </runtime>
      <builder
            id="eu.quanticol.carma.ui.wizard.carmaBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="CARMA commands"
            id="eu.quanticol.carma.ui.wizard.carmaBuilder.category">
      </category>
      <command
            name="Add/RemoveCARMA"
            defaultHandler="eu.quanticol.carma.ui.wizard.builder.AddRemoveCARMABuilderHandler"
            categoryId="eu.quanticol.carma.ui.wizard.carmaBuilder.category"
            id="eu.quanticol.carma.ui.wizard.addRemoveCARMABuilder">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="eu.quanticol.carma.ui.wizard.addRemoveCARMABuilder"
               label="Disable Sample builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              value="eu.quanticol.carma.ui.wizard.carmaBuilder"
                              property="org.eclipse.core.resources.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="eu.quanticol.carma.ui.wizard.addRemoveCARMABuilder"
               label="Enable Sample builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 value="eu.quanticol.carma.ui.wizard.carmaBuilder"
                                 property="org.eclipse.core.resources.projectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
