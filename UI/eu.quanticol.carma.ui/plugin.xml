<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="eu.quanticol.carma.ui.simulation"
            name="Simulation">
      </category>
      <command
            categoryId="eu.quanticol.carma.ui.simulation"
            defaultHandler="eu.quanticol.carma.ui.handlers.SimulationHandler"
            id="eu.quanticol.carma.ui.dosimulate"
            name="Simulate">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="eu.quanticol.carma.ui.menu"
               label="Carma">
            <command
                  commandId="eu.quanticol.carma.ui.dosimulate"
                  label="Simulate"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="eu.quanticol.carma.ui"
            name="CARMA">
      </category>
      <view
            category="eu.quanticol.carma.ui"
            class="eu.quanticol.carma.ui.views.SimulationLaboratoryView"
            icon="icons/sample.gif"
            id="eu.quanticol.carma.ui.views.SimulationLaboratoryView"
            name="Simulation Laboratory View">
      </view>
      <view
            category="eu.quanticol.carma.ui"
            class="eu.quanticol.carma.ui.views.ExperimentResultsView"
            icon="icons/sample.gif"
            id="eu.quanticol.carma.ui.views.ExperimentResultsView"
            name="Experiment Results View">
      </view>
   </extension>

</plugin>
